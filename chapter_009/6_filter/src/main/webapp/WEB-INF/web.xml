<web-app>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>dionisius.servlets.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>users_controller</servlet-name>
        <servlet-class>dionisius.servlets.UsersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>users_controller</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>sighin</servlet-name>
        <servlet-class>dionisius.servlets.SighinController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sighin</servlet-name>
        <url-pattern>/sighin</url-pattern>
    </servlet-mapping>

</web-app>