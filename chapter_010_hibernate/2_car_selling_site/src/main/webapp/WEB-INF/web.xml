<web-app>

    <listener>
        <listener-class>ru.dionisius.service.AppContextListener</listener-class>
    </listener>

    <filter>
        <filter-name>auth</filter-name>
        <filter-class>ru.dionisius.service.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>auth</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>show</servlet-name>
        <servlet-class>ru.dionisius.service.ShowItemsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>show</servlet-name>
        <url-pattern>/show</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>create</servlet-name>
        <servlet-class>ru.dionisius.service.CreateAdController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>create</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>setSold</servlet-name>
        <servlet-class>ru.dionisius.service.SetSoldController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>setSold</servlet-name>
        <url-pattern>/setSold</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>ru.dionisius.service.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>auth</servlet-name>
        <servlet-class>ru.dionisius.service.AuthController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>auth</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>quit</servlet-name>
        <servlet-class>ru.dionisius.service.QuitController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>quit</servlet-name>
        <url-pattern>/quit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>sign_up</servlet-name>
        <servlet-class>ru.dionisius.service.CreateUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sign_up</servlet-name>
        <url-pattern>/sign_up</url-pattern>
    </servlet-mapping>

</web-app>